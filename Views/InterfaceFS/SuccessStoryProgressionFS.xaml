<StackPanel x:Class="SuccessStory.Views.InterfaceFS.SuccessStoryProgressionFS"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SuccessStory.Views.InterfaceFS"
             mc:Ignorable="d">
    
    <TextBlock Style="{DynamicResource TextBlockBaseStyle}"
               FontFamily="{DynamicResource FontTitilliumWebBold}"
               Text="{DynamicResource LOCSuccessStoryAchievements}"
               Margin="0,0,0,10" />
    <Grid>
        <ProgressBar Name="PART_ScProgressBar" Grid.Column="2" FontSize="{DynamicResource FontSize}" Maximum="100" Value="30">
        </ProgressBar>
        <TextBlock Style="{DynamicResource TextBlockBaseStyle}" FontFamily="{DynamicResource FontTitilliumWebBold}" 
                   Grid.Column="0" Text="XXX/XXX" Name="PART_ScCountIndicator" HorizontalAlignment="Center">
        </TextBlock>
    </Grid>
</StackPanel>
