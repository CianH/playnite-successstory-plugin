        <StackPanel Visibility="{Binding Path=IsGray, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
            <Image Stretch="UniformToFill" Name="PART_Icon"
                   RenderOptions.BitmapScalingMode="Fant">
                <Image.Style>
                    <Style TargetType="{x:Type Image}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=EnableRaretyIndicator, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="{Binding Path=Percent, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource SetColorConverter}}" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
        </StackPanel>
